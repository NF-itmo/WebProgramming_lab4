{
  "name": "monorepo",
  "version": "1.0.0",
  "description": "Micro-frontend architecture using module federation",
  "keywords": [
    "micro-frontend",
    "module-federation",
    "webpack"
  ],
  "author": "",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "install-all": "npm install",
    "start": "concurrently \"npm:start-host\" \"npm:start-login\" \"npm:start-main\"",
    "start-host": "cd services/host && npm start",
    "start-login": "cd services/login && npm start",
    "start-main": "cd services/main && npm start",
    "build": "npm run build-host && npm run build-login && npm run build-main",
    "build-host": "cd services/host && npm run build:prod",
    "build-login": "cd services/login && npm run build:prod",
    "build-main": "cd services/main && npm run build:prod"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.28.5",
    "concurrently": "^7.6.0"
  }
}
